@page "/administration/categories/add"

    @using Microsoft.AspNetCore.Authorization
    @attribute [Authorize(Roles = "Admin, SuperAdmin")]

    @if (ShowError)
    {
        <div class="alert alert-danger" role="alert">
            <p>@Error</p>
        </div>
    }
    <div class="add-container">
        <div class="my-4">
            <EditForm Model="@Category" OnValidSubmit="OnSubmit">

                <DataAnnotationsValidator />
                <div class="row my-2 mx-2">
                    <div class="col-25">
                        <label for="name">Nazwa Kategorii</label>
                    </div>
                    <div class="col-75">
                        <InputText name="name" id="name" class="form-control" @bind-Value="@Category.Name"></InputText>
                        <ValidationMessage For="@(() => Category.Name)" />
                    </div>
                </div>
                <div class="d-flex justify-content-center flex-row my-2">
                    <input type="submit" class="btn btn-primary" value="Zapisz">
                </div>
            </EditForm>
        </div>
    </div>


