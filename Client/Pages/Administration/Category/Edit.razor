@page "/administration/categories/edit/{CategoryId:guid}"


@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin, SuperAdmin")]

@if (ShowError)
{
    <div class="alert alert-danger" role="alert">
        <p>@Error</p>
    </div>
}
<div class="add-container">
    <div class="my-4">
        <EditForm Model="@Category" OnValidSubmit="OnSubmit">
            <input type="hidden" name="Id" id="Id" value="@CategoryId" />

            <DataAnnotationsValidator />
            <div class="row my-2 mx-2">
                <div class="col-25">
                    <label for="username">Nazwa Kategorii</label>
                </div>
                <div class="col-75">
                    <InputText name="username" id="username" class="form-control" @bind-Value="@Category.Name"></InputText>
                    <ValidationMessage For="@(() => Category.Name)" />
                </div>
            </div>
            <div class="d-flex justify-content-center flex-row my-2">
                <input type="submit" class="btn btn-primary" value="Zapisz">
            </div>
        </EditForm>
    </div>
</div>




