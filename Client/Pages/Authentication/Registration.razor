@page "/registration"


@if (ShowRegistrationErrors)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var error in Errors)
        {
            <p>@error</p>
        }
    </div>
}


<EditForm Model="@registrationModel" OnValidSubmit="Register">

    <DataAnnotationsValidator />
    <div class="row my-2 mx-2">
        <div class="col-25">
            <label for="username">Nazwa użytkownika</label>
        </div>
        <div class="col-75">
            <InputText name="username" id="username" class="form-control" @bind-Value="@registrationModel.Username"></InputText>
            <ValidationMessage For="@(() => registrationModel.Username)" />
        </div>
    </div>
    <div class="row my-2 mx-2">
        <div class="col-25">
            <label for="password">Hasło</label>
        </div>
        <div class="col-75">
            <InputText name="password" id="password" class="form-control" type="password" @bind-Value="@registrationModel.Password"></InputText>
            <ValidationMessage For="@(() => registrationModel.Password)" />

        </div>
    </div>
    <div class="row my-2 mx-2">
        <div class="col-25">
            <label for="cpassword">Potwierdź Hasło</label>
        </div>
        <div class="col-75">
            <InputText id="cpassword" class="form-control" type="password" @bind-Value="@registrationModel.ConfirmPassword"></InputText>
            <ValidationMessage For="@(() => registrationModel.ConfirmPassword)" />

        </div>
    </div>
    <div class="row my-2 mx-2">
        <div class="col-25">
            <label for="email">Email</label>
        </div>
        <div class="col-75">
            <InputText name="email" id="email" class="form-control" type="email" @bind-Value="@registrationModel.Email"></InputText>
            <ValidationMessage For="@(() => registrationModel.Email)" />
        </div>
    </div>
    <div class="d-flex justify-content-center flex-row my-2">
        <input type="submit" class="btn btn-primary " value="Zarejestruj się">
    </div>
</EditForm>


