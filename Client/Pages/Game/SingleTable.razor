



<RadzenCard Style="height: 300px; width: 300px;">
        <div class="d-inline-flex justify-content-between my-2">
            <b>@Match.CategoryName</b>
            <div>
                <b>@Match.Bid</b>
                <span class="oi oi-dollar" aria-hidden="true"></span>
            </div>
        </div>
        <hr />
        <div class="d-flex flex-column">
            <div class="d-inline-flex justify-content-between my-2">
                <b>Liczba graczy: </b>
                <b>@Match.CountOfPlayers/@Match.MaxCountOfPlayers</b>
            </div>
            @foreach (var item in Match.Players)
            {
                <div>
                    <span class="oi oi-person"></span>  <b>@item.Username</b>
                </div>
            }
        </div>
            <div class="d-flex justify-content-end align-content-end my-2">
                <RadzenButton @ref="joinButton" Text="Dołącz" Click="@Join"></RadzenButton>
            </div>


</RadzenCard>



