@page "/game/livegame/{MatchId:guid}"



<div class="details-container">
    <div class="game">
        <div class="questions">
                <div class="question">
                    <h3>@tempQuestion.Content</h3>
                </div>
                <div class="answers">
                    @foreach (var answer in tempQuestion.Answers)
                    {
                        <div class="answer @((IsBreak&&answer.IsCorrect?"break correctAnswer": IsBreak&&!answer.IsCorrect?"break inCorrectAnswer":""))"  @onclick="() => SelectAnswer(answer.IsCorrect)">
                            <h4>@answer.Content</h4>
                        </div>
                    }
                </div>
        </div>
        <div class="score">
            <div class="result-header">
                <h3>Wyniki</h3>
            </div>
            <div class="d-flex flex-column">
                @for(int i=0;i< Scores.Count(); i++)
                {
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="@((UserId==Scores[i].ApplicationUserId?"font-weight-bold":""))">@((i+1)+".") @Scores[i].Username</p>
                        </div>
                        <div>
                            @Scores[i].Points
                        </div>
                    </div>
                }
            </div>

        </div>

    </div>
</div>




